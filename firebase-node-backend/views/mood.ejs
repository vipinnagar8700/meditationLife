        <script>
            function getTokenFromCookie() {
                try {
                    // First try to get from localStorage
                    const token = localStorage.getItem('token');
                    if (token) {
                        return JSON.parse(token);
                    }

                    // Fallback: try to get from cookies
                    const cookies = document.cookie.split(';');
                    for (let cookie of cookies) {
                        const [name, value] = cookie.trim().split('=');
                        if (name === 'token') {
                            return value;
                        }
                    }

                    return null;
                } catch (error) {
                    console.error('Error getting token:', error);
                    return null;
                }
            }
            const token = getTokenFromCookie();

            const API_BASE = '/api';
            let currentPage = 1;
            let totalPages = 1;

            // Mood icons and colors mapping
            const moodConfig = {
                happy: { icon: 'üòä', color: 'bg-yellow-100 text-yellow-800', class: 'mood-happy' },
                calm: { icon: 'üòå', color: 'bg-blue-100 text-blue-800', class: 'mood-calm' },
                natural: { icon: 'üòê', color: 'bg-green-100 text-green-800', class: 'mood-natural' },
                anxiety: { icon: 'üò∞', color: 'bg-pink-100 text-pink-800', class: 'mood-anxiety' },
                angry: { icon: 'üò†', color: 'bg-red-100 text-red-800', class: 'mood-angry' },
                sad: { icon: 'üò¢', color: 'bg-indigo-100 text-indigo-800', class: 'mood-sad' }
            };

            // Load initial data
            document.addEventListener('DOMContentLoaded', () => {
                loadMoodData();
                loadStatistics();
                setupEventListeners();
            });

            // Setup event listeners
            function setupEventListeners() {
                document.getElementById('logMoodBtn').addEventListener('click', () => {
                    document.getElementById('logMoodModal').classList.add('show');
                });

                document.getElementById('closeLogModal').addEventListener('click', closeLogModal);
                document.getElementById('cancelLogModal').addEventListener('click', closeLogModal);

                document.getElementById('closeEditModal').addEventListener('click', closeEditModal);
                document.getElementById('cancelEditModal').addEventListener('click', closeEditModal);

                document.getElementById('logMoodForm').addEventListener('submit', handleLogMood);
                document.getElementById('editMoodForm').addEventListener('submit', handleEditMood);

                document.getElementById('searchInput').addEventListener('input', debounce(loadMoodData, 500));
                document.getElementById('moodFilter').addEventListener('change', loadMoodData);

                document.getElementById('prevPage').addEventListener('click', () => {
                    if (currentPage > 1) {
                        currentPage--;
                        loadMoodData();
                    }
                });

                document.getElementById('nextPage').addEventListener('click', () => {
                    if (currentPage < totalPages) {
                        currentPage++;
                        loadMoodData();
                    }
                });

                // Mood card selection styling
                document.querySelectorAll('input[name="moodLevel"]').forEach(radio => {
                    radio.addEventListener('change', (e) => {
                        document.querySelectorAll('input[name="moodLevel"]').forEach(r => {
                            r.parentElement.style.border = '2px solid transparent';
                            r.parentElement.style.transform = 'scale(1)';
                        });
                        e.target.parentElement.style.border = '2px solid #667eea';
                        e.target.parentElement.style.transform = 'scale(1.05)';
                    });
                });

                document.querySelectorAll('input[name="editMoodLevel"]').forEach(radio => {
                    radio.addEventListener('change', (e) => {
                        document.querySelectorAll('input[name="editMoodLevel"]').forEach(r => {
                            r.parentElement.style.border = '2px solid transparent';
                            r.parentElement.style.transform = 'scale(1)';
                        });
                        e.target.parentElement.style.border = '2px solid #667eea';
                        e.target.parentElement.style.transform = 'scale(1.05)';
                    });
                });
            }

            // Load mood data
            async function loadMoodData() {
                try {
                    const search = document.getElementById('searchInput').value;
                    const moodLevel = document.getElementById('moodFilter').value;

                    const params = new URLSearchParams({
                        page: currentPage,
                        limit: 10
                    });

                    if (moodLevel) params.append('moodLevel', moodLevel);

                    const response = await fetch(`${API_BASE}/mood/history?${params}`, {
                        headers: { 'Authorization': `Bearer ${token}` }
                    });

                    const data = await response.json();

                    if (data.success) {
                        displayMoodTimeline(data.data, search);
                        updatePagination(data.pagination);
                    }
                } catch (error) {
                    console.error('Error loading mood data:', error);
                    showNotification('Failed to load mood data', 'error');
                }
            }

            // Load statistics
            async function loadStatistics() {
                try {
                    const [statsRes, distRes] = await Promise.all([
                        fetch(`${API_BASE}/mood/stats?days=30`, {
                            headers: { 'Authorization': `Bearer ${token}` }
                        }),
                        fetch(`${API_BASE}/mood/history?limit=100`, {
                            headers: { 'Authorization': `Bearer ${token}` }
                        })
                    ]);

                    const statsData = await statsRes.json();
                    const distData = await distRes.json();

                    if (statsData.success) {
                        document.getElementById('totalEntries').textContent = statsData.stats.total;
                        document.getElementById('monthEntries').textContent = statsData.stats.recentEntries;
                        document.getElementById('mostCommonMood').textContent =
                            statsData.stats.mostCommonMood ? statsData.stats.mostCommonMood.mood : '-';

                        displayMoodDistribution(statsData.stats.distribution);
                    }

                    if (distData.success) {
                        calculateStreak(distData.data);
                    }
                } catch (error) {
                    console.error('Error loading statistics:', error);
                }
            }

            // Display mood distribution
            function displayMoodDistribution(distribution) {
                const container = document.getElementById('moodDistribution');
                const total = distribution.reduce((sum, item) => sum + item.count, 0);

                container.innerHTML = Object.keys(moodConfig).map(mood => {
                    const item = distribution.find(d => d._id === mood);
                    const count = item ? item.count : 0;
                    const percentage = total > 0 ? Math.round((count / total) * 100) : 0;
                    const config = moodConfig[mood];

                    return `
                    <div class="text-center p-4 rounded-lg ${config.class}">
                        <div class="text-3xl mb-2">${config.icon}</div>
                        <p class="font-semibold capitalize">${mood}</p>
                        <p class="text-2xl font-bold mt-1">${count}</p>
                        <p class="text-sm mt-1">${percentage}%</p>
                    </div>
                `;
                }).join('');
            }

            // Display mood timeline
            function displayMoodTimeline(moods, searchTerm = '') {
                const timeline = document.getElementById('moodTimeline');

                let filteredMoods = moods;
                if (searchTerm) {
                    filteredMoods = moods.filter(mood =>
                        mood.moodNote?.toLowerCase().includes(searchTerm.toLowerCase())
                    );
                }

                if (filteredMoods.length === 0) {
                    timeline.innerHTML = `
                    <div class="text-center py-12 text-gray-500">
                        <i class="fas fa-inbox text-4xl mb-4"></i>
                        <p>No mood entries found</p>
                    </div>
                `;
                    return;
                }

                timeline.innerHTML = filteredMoods.map(mood => {
                    const config = moodConfig[mood.moodLevel];
                    const date = new Date(mood.date);

                    return `
                    <div class="timeline-item">
                        <div class="timeline-dot ${config.color}"></div>
                        <div class="bg-gray-50 rounded-lg p-4 hover:shadow-md transition-all">
                            <div class="flex items-start justify-between mb-2">
                                <div class="flex items-center space-x-3">
                                    <span class="text-3xl">${config.icon}</span>
                                    <div>
                                        <h4 class="font-bold text-gray-800 capitalize">${mood.moodLevel}</h4>
                                        <p class="text-sm text-gray-500">
                                            ${date.toLocaleDateString('en-US', {
                        weekday: 'short',
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    })}
                                        </p>
                                    </div>
                                </div>
                                <div class="flex space-x-2">
                                    <button onclick="editMood('${mood._id}')" 
                                        class="text-blue-500 hover:text-blue-700 p-2">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button onclick="deleteMood('${mood._id}')" 
                                        class="text-red-500 hover:text-red-700 p-2">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                            ${mood.moodNote ? `
                                <p class="text-gray-600 mt-2 pl-12">${mood.moodNote}</p>
                            ` : ''}
                        </div>
                    </div>
                `;
                }).join('');
            }

            // Calculate streak
            function calculateStreak(moods) {
                let streak = 0;
                const today = new Date();
                today.setHours(0, 0, 0, 0);

                for (let i = 0; i < 365; i++) {
                    const checkDate = new Date(today);
                    checkDate.setDate(checkDate.getDate() - i);

                    const hasEntry = moods.some(mood => {
                        const moodDate = new Date(mood.date);
                        moodDate.setHours(0, 0, 0, 0);
                        return moodDate.getTime() === checkDate.getTime();
                    });

                    if (hasEntry) {
                        streak++;
                    } else if (i > 0) {
                        break;
                    }
                }

                document.getElementById('currentStreak').textContent = streak;
            }

            // Handle log mood
            async function handleLogMood(e) {
                e.preventDefault();
                const formData = new FormData(e.target);

                try {
                    const response = await fetch(`${API_BASE}/mood/log`, {
                        method: 'POST',
                        headers: {
                            'Authorization': `Bearer ${token}`,
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            moodLevel: formData.get('moodLevel'),
                            moodNote: formData.get('moodNote')
                        })
                    });

                    const data = await response.json();

                    if (data.success) {
                        showNotification('Mood logged successfully!', 'success');
                        closeLogModal();
                        loadMoodData();
                        loadStatistics();
                        e.target.reset();
                    } else {
                        showNotification(data.message || 'Failed to log mood', 'error');
                    }
                } catch (error) {
                    console.error('Error logging mood:', error);
                    showNotification('Failed to log mood', 'error');
                }
            }

            // Edit mood
            async function editMood(id) {
                try {
                    const response = await fetch(`${API_BASE}/${id}`, {
                        headers: { 'Authorization': `Bearer ${token}` }
                    });

                    const data = await response.json();

                    if (data.success) {
                        const mood = data.data;
                        document.getElementById('editMoodId').value = mood._id;
                        document.getElementById('editMoodNote').value = mood.moodNote || '';

                        // Select the mood radio button
                        const radioBtn = document.querySelector(`input[name="editMoodLevel"][value="${mood.moodLevel}"]`);
                        if (radioBtn) {
                            radioBtn.checked = true;
                            radioBtn.dispatchEvent(new Event('change'));
                        }

                        document.getElementById('editMoodModal').classList.add('show');
                    } else {
                        showNotification('Failed to load mood entry', 'error');
                    }
                } catch (error) {
                    console.error('Error loading mood entry:', error);
                    showNotification('Failed to load mood entry', 'error');
                }
            }

            // Handle edit mood
            async function handleEditMood(e) {
                e.preventDefault();
                const id = document.getElementById('editMoodId').value;
                const moodLevel = document.querySelector('input[name="editMoodLevel"]:checked').value;
                const moodNote = document.getElementById('editMoodNote').value;

                try {
                    const response = await fetch(`${API_BASE}/${id}`, {
                        method: 'PUT',
                        headers: {
                            'Authorization': `Bearer ${token}`,
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ moodLevel, moodNote })
                    });

                    const data = await response.json();

                    if (data.success) {
                        showNotification('Mood updated successfully!', 'success');
                        closeEditModal();
                        loadMoodData();
                        loadStatistics();
                    } else {
                        showNotification(data.message || 'Failed to update mood', 'error');
                    }
                } catch (error) {
                    console.error('Error updating mood:', error);
                    showNotification('Failed to update mood', 'error');
                }
            }

            // Delete mood
            async function deleteMood(id) {
                if (!confirm('Are you sure you want to delete this mood entry?')) return;

                try {
                    const response = await fetch(`${API_BASE}/${id}`, {
                        method: 'DELETE',
                        headers: { 'Authorization': `Bearer ${token}` }
                    });

                    const data = await response.json();

                    if (data.success) {
                        showNotification('Mood entry deleted successfully!', 'success');
                        loadMoodData();
                        loadStatistics();
                    } else {
                        showNotification(data.message || 'Failed to delete mood', 'error');
                    }
                } catch (error) {
                    console.error('Error deleting mood:', error);
                    showNotification('Failed to delete mood', 'error');
                }
            }

            // Update pagination
            function updatePagination(pagination) {
                totalPages = pagination.totalPages;
                currentPage = pagination.page;

                document.getElementById('pageInfo').textContent =
                    `Showing ${((pagination.page - 1) * pagination.limit) + 1}-${Math.min(pagination.page * pagination.limit, pagination.totalItems)} of ${pagination.totalItems} entries`;

                document.getElementById('prevPage').disabled = currentPage === 1;
                document.getElementById('nextPage').disabled = currentPage >= totalPages;
            }

            // Modal functions
            function closeLogModal() {
                document.getElementById('logMoodModal').classList.remove('show');
                document.getElementById('logMoodForm').reset();
                // Reset mood card borders
                document.querySelectorAll('input[name="moodLevel"]').forEach(r => {
                    r.parentElement.style.border = '2px solid transparent';
                    r.parentElement.style.transform = 'scale(1)';
                });
            }

            function closeEditModal() {
                document.getElementById('editMoodModal').classList.remove('show');
                document.getElementById('editMoodForm').reset();
                // Reset mood card borders
                document.querySelectorAll('input[name="editMoodLevel"]').forEach(r => {
                    r.parentElement.style.border = '2px solid transparent';
                    r.parentElement.style.transform = 'scale(1)';
                });
            }

            // Utility functions
            function debounce(func, wait) {
                let timeout;
                return function executedFunction(...args) {
                    const later = () => {
                        clearTimeout(timeout);
                        func(...args);
                    };
                    clearTimeout(timeout);
                    timeout = setTimeout(later, wait);
                };
            }

            function showNotification(message, type = 'info') {
                const bgColors = {
                    success: 'bg-green-500',
                    error: 'bg-red-500',
                    info: 'bg-blue-500'
                };

                const notification = document.createElement('div');
                notification.className = `fixed top-20 right-4 ${bgColors[type]} text-white px-6 py-3 rounded-lg shadow-lg z-50 transform transition-all duration-300`;
                notification.innerHTML = `
                <div class="flex items-center space-x-2">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
                    <span>${message}</span>
                </div>
            `;

                document.body.appendChild(notification);

                setTimeout(() => {
                    notification.style.opacity = '0';
                    notification.style.transform = 'translateX(100%)';
                    setTimeout(() => notification.remove(), 300);
                }, 3000);
            }

            // Close modals on outside click
            window.onclick = function (event) {
                const logModal = document.getElementById('logMoodModal');
                const editModal = document.getElementById('editMoodModal');

                if (event.target === logModal) {
                    closeLogModal();
                }
                if (event.target === editModal) {
                    closeEditModal();
                }
            }
        </script>
