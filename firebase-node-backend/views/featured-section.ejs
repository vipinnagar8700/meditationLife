<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Featured Section Management - Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .sidebar {
            transition: transform 0.3s ease-in-out;
        }

        .sidebar.hidden {
            transform: translateX(-100%);
        }

        @media (max-width: 768px) {
            .sidebar {
                position: fixed;
                z-index: 40;
                height: 100vh;
            }
        }

        .menu-item {
            transition: all 0.3s ease;
        }

        .menu-item:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transform: translateX(5px);
        }

        .menu-item.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .badge-active {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }

        .badge-inactive {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }

        .table-row:hover {
            background-color: #f9fafb;
            transform: scale(1.01);
            transition: all 0.2s ease;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 50;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal.show {
            display: flex !important;
            align-items: center;
            justify-content: center;
            animation: fadeIn 0.3s;
        }

        .modal-content {
            background-color: white;
            border-radius: 1rem;
            max-width: 500px;
            width: 90%;
            max-height: 90vh;
            overflow-y: auto;
            animation: slideDown 0.3s;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @keyframes slideDown {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .icon-preview {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
        }
    </style>
</head>

<body class="bg-gray-100">
    <!-- Header -->
    <%- include('./layout/header') %>
        <div class="flex pt-16">
            <!-- Sidebar Component -->
            <%- include('./layout/sidebar') %>

                <!-- Main Content -->
                <main class="flex-1 p-6 lg:p-8">
                    <!-- Header Section -->
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
                        <div>
                            <h2 class="text-3xl font-bold text-gray-800 mb-2">Featured Section Management</h2>
                            <p class="text-gray-600">Manage all featured sections and their statuses</p>
                        </div>
                        <button id="addSectionBtn"
                            class="mt-4 md:mt-0 px-6 py-3 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all"
                            style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-plus mr-2"></i>Add New Section
                        </button>
                    </div>

                    <!-- Stats Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                        <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-purple-500">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-500 text-sm font-medium mb-1">Total Sections</p>
                                    <h3 class="text-2xl font-bold text-gray-800" id="totalSections">0</h3>
                                </div>
                                <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-th-large text-purple-500 text-xl"></i>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-green-500">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-500 text-sm font-medium mb-1">Active Sections</p>
                                    <h3 class="text-2xl font-bold text-gray-800" id="activeSections">0</h3>
                                </div>
                                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-check-circle text-green-500 text-xl"></i>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-red-500">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-500 text-sm font-medium mb-1">Inactive Sections</p>
                                    <h3 class="text-2xl font-bold text-gray-800" id="inactiveSections">0</h3>
                                </div>
                                <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-times-circle text-red-500 text-xl"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Search and Filter -->
                    <div class="bg-white rounded-xl shadow-md p-4 mb-6">
                        <div class="flex flex-col md:flex-row gap-4">
                            <div class="flex-1">
                                <div class="relative">
                                    <i
                                        class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="text" id="searchInput" placeholder="Search by name or description..."
                                        class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none">
                                </div>
                            </div>
                            <select id="statusFilter"
                                class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none">
                                <option value="">All Statuses</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                            <select id="sortByFilter"
                                class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none">
                                <option value="createdAt">Sort by Date</option>
                                <option value="name">Sort by Name</option>
                            </select>
                            <select id="orderFilter"
                                class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none">
                                <option value="desc">Descending</option>
                                <option value="asc">Ascending</option>
                            </select>
                        </div>
                    </div>

                    <!-- Sections Table -->
                    <div class="bg-white rounded-xl shadow-md overflow-hidden">
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead class="bg-gradient-to-r from-purple-500 to-pink-500 text-white">
                                    <tr>
                                        <th class="px-6 py-4 text-left text-sm font-semibold">#</th>
                                        <th class="px-6 py-4 text-left text-sm font-semibold">Icon</th>
                                        <th class="px-6 py-4 text-left text-sm font-semibold">Name</th>
                                        <th class="px-6 py-4 text-left text-sm font-semibold">Description</th>
                                        <th class="px-6 py-4 text-left text-sm font-semibold">Status</th>
                                        <th class="px-6 py-4 text-left text-sm font-semibold">Created Date</th>
                                        <th class="px-6 py-4 text-center text-sm font-semibold">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="sectionTableBody" class="divide-y divide-gray-200">
                                    <!-- JavaScript will populate this -->
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <div class="flex items-center justify-between px-6 py-4 border-t border-gray-200">
                            <p class="text-sm text-gray-600" id="pageInfo">Loading...</p>
                            <div class="flex space-x-2">
                                <button id="prevPage"
                                    class="px-4 py-2 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                                    <i class="fas fa-chevron-left"></i>
                                </button>
                                <button id="nextPage"
                                    class="px-4 py-2 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </main>
        </div>

        <!-- Add/Edit Section Modal -->
        <div id="sectionModal" class="modal">
            <div class="modal-content">
                <div class="bg-gradient-to-r from-purple-500 to-pink-500 text-white px-6 py-4 rounded-t-xl">
                    <div class="flex items-center justify-between">
                        <h3 class="text-xl font-bold" id="modalTitle">Add New Section</h3>
                        <button id="closeModal" class="text-white hover:text-gray-200" type="button">
                            <i class="fas fa-times text-xl"></i>
                        </button>
                    </div>
                </div>
                <form id="sectionForm" class="p-6">
                    <input type="hidden" id="sectionId">
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Name <span
                                    class="text-red-500">*</span></label>
                            <input type="text" id="sectionName" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                                placeholder="e.g., Relaxation">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Icon Image URL <span
                                    class="text-red-500">*</span></label>
                            <input type="url" id="sectionIcon" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                                placeholder="https://example.com/icon.png">
                            <p class="text-xs text-gray-500 mt-1">Enter a valid image URL</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                            <textarea id="sectionDescription" rows="3"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                                placeholder="Brief description of the section"></textarea>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                            <select id="sectionStatus"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none">
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                    </div>
                    <div class="flex justify-end space-x-3 mt-6">
                        <button type="button" id="cancelBtn"
                            class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                            Cancel
                        </button>
                        <button type="submit"
                            class="px-6 py-2 text-white rounded-lg shadow-lg hover:shadow-xl transition-all"
                            style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-save mr-2"></i>Save Section
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- View Section Modal -->
        <div id="viewModal" class="modal">
            <div class="modal-content">
                <div class="bg-gradient-to-r from-purple-500 to-pink-500 text-white px-6 py-4 rounded-t-xl">
                    <div class="flex items-center justify-between">
                        <h3 class="text-xl font-bold">Section Details</h3>
                        <button id="closeViewModal" class="text-white hover:text-gray-200" type="button">
                            <i class="fas fa-times text-xl"></i>
                        </button>
                    </div>
                </div>
                <div class="p-6">
                    <div class="flex items-center space-x-4 mb-6">
                        <img id="viewIcon" class="w-20 h-20 rounded-lg object-cover border-2 border-purple-200"
                            alt="Section Icon">
                        <div>
                            <h4 class="text-2xl font-bold text-gray-800" id="viewName"></h4>
                            <span id="viewStatusBadge" class="inline-block mt-1"></span>
                        </div>
                    </div>
                    <div class="space-y-3">
                        <div class="flex justify-between py-2 border-b">
                            <span class="font-medium text-gray-700">Description:</span>
                            <span class="text-gray-600 text-right" id="viewDescription"></span>
                        </div>
                        <div class="flex justify-between py-2 border-b">
                            <span class="font-medium text-gray-700">Icon URL:</span>
                            <a href="#" target="_blank" id="viewIconUrl"
                                class="text-blue-600 hover:underline text-sm truncate max-w-xs"></a>
                        </div>
                        <div class="flex justify-between py-2 border-b">
                            <span class="font-medium text-gray-700">Created Date:</span>
                            <span class="text-gray-600" id="viewDate"></span>
                        </div>
                        <div class="flex justify-between py-2 border-b">
                            <span class="font-medium text-gray-700">Last Updated:</span>
                            <span class="text-gray-600" id="viewUpdatedDate"></span>
                        </div>
                    </div>
                    <button id="closeViewBtn" type="button"
                        class="mt-6 w-full px-6 py-2 text-white rounded-lg shadow-lg hover:shadow-xl transition-all"
                        style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        Close
                    </button>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                // ==== Helper Function to Get Token ====
                function getTokenFromCookie() {
                    try {
                        const token = localStorage.getItem('token');
                        if (token) {
                            return JSON.parse(token);
                        }

                        const cookies = document.cookie.split(';');
                        for (let cookie of cookies) {
                            const [name, value] = cookie.trim().split('=');
                            if (name === 'token') {
                                return value;
                            }
                        }
                        return null;
                    } catch (error) {
                        console.error('Error getting token:', error);
                        return null;
                    }
                }

                // ==== DOM Elements ====
                const totalSectionsEl = document.getElementById('totalSections');
                const activeSectionsEl = document.getElementById('activeSections');
                const inactiveSectionsEl = document.getElementById('inactiveSections');
                const sectionTableBody = document.getElementById('sectionTableBody');
                const pageInfo = document.getElementById('pageInfo');
                const prevPageBtn = document.getElementById('prevPage');
                const nextPageBtn = document.getElementById('nextPage');
                const searchInput = document.getElementById('searchInput');
                const statusFilter = document.getElementById('statusFilter');
                const sortByFilter = document.getElementById('sortByFilter');
                const orderFilter = document.getElementById('orderFilter');

                // ==== Modal Elements ====
                const addSectionBtn = document.getElementById('addSectionBtn');
                const sectionModal = document.getElementById('sectionModal');
                const closeModal = document.getElementById('closeModal');
                const cancelBtn = document.getElementById('cancelBtn');
                const sectionForm = document.getElementById('sectionForm');
                const modalTitle = document.getElementById('modalTitle');

                // ==== View Modal Elements ====
                const viewModal = document.getElementById('viewModal');
                const closeViewModal = document.getElementById('closeViewModal');
                const closeViewBtn = document.getElementById('closeViewBtn');

                // ==== Pagination ====
                let currentPage = 1;
                let totalPages = 1;
                const limit = 10;

                // ==== Fetch Stats ====
                async function fetchStats() {
                    try {
                        const res = await fetch('/api/featured/stats/overview');
                        const data = await res.json();

                        if (data.success) {
                            totalSectionsEl.textContent = data.stats.totalSections;
                            activeSectionsEl.textContent = data.stats.activeSections;
                            inactiveSectionsEl.textContent = data.stats.inactiveSections;
                        }
                    } catch (error) {
                        console.error('Error fetching stats:', error);
                    }
                }

                // ==== Fetch Sections ====
                async function fetchSections(page = 1) {
                    const search = searchInput.value.trim();
                    const status = statusFilter.value;
                    const sortBy = sortByFilter.value;
                    const order = orderFilter.value;

                    let url = `/api/featured/all?page=${page}&limit=${limit}`;
                    if (search) url += `&search=${encodeURIComponent(search)}`;
                    if (status) url += `&status=${status}`;
                    if (sortBy) url += `&sortBy=${sortBy}`;
                    if (order) url += `&order=${order}`;

                    try {
                        const res = await fetch(url);
                        const data = await res.json();

                        if (!data.success) {
                            alert('Failed to fetch sections');
                            return;
                        }

                        // Update Stats
                        fetchStats();

                        // Populate Table
                        sectionTableBody.innerHTML = '';
                        data.data.forEach((section, index) => {
                            const tr = document.createElement('tr');
                            tr.className = 'table-row';
                            tr.innerHTML = `
                                <td class="px-6 py-4 text-sm text-gray-700">${(page - 1) * limit + index + 1}</td>
                                <td class="px-6 py-4">
                                    <img src="${section.icon_Image}" alt="${section.name}" 
                                         class="icon-preview" 
                                         onerror="this.src='https://via.placeholder.com/60?text=No+Image'">
                                </td>
                                <td class="px-6 py-4 text-sm font-medium text-gray-800">${section.name}</td>
                              <td class="px-6 py-4 text-sm text-gray-600">
  ${section.description && section.description.length > 50
                                    ? section.description.substring(0, 50) + '...'
                                    : section.description || 'N/A'}
</td>

                                <td class="px-6 py-4 text-sm">
                                    <span class="${section.status === 'active' ? 'badge-active' : 'badge-inactive'} px-3 py-1 rounded-full text-white text-xs font-semibold">
                                        <i class="fas fa-${section.status === 'active' ? 'check' : 'times'} mr-1"></i>${section.status.toUpperCase()}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600">${new Date(section.createdAt).toLocaleDateString()}</td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center justify-center space-x-2">
                                        <button onclick="viewSection('${section._id}')" 
                                                class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-all" title="View">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button onclick="editSection('${section._id}')" 
                                                class="p-2 text-green-600 hover:bg-green-50 rounded-lg transition-all" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button onclick="deleteSection('${section._id}')" 
                                                class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-all" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            `;
                            sectionTableBody.appendChild(tr);
                        });

                        // Update Pagination
                        currentPage = data.pagination.page;
                        totalPages = data.pagination.totalPages;
                        pageInfo.textContent = `Page ${currentPage} of ${totalPages} (${data.pagination.totalItems} items)`;
                        prevPageBtn.disabled = !data.pagination.hasPrev;
                        nextPageBtn.disabled = !data.pagination.hasNext;

                    } catch (error) {
                        console.error('Error fetching sections:', error);
                        alert('Failed to fetch sections. Please try again.');
                    }
                }

                // ==== View Section ====
                window.viewSection = async (sectionId) => {
                    try {
                        const res = await fetch(`/api/featured/${sectionId}`);
                        const data = await res.json();

                        if (!data.success) {
                            alert('Failed to fetch section details');
                            return;
                        }

                        const section = data.data;
                        document.getElementById('viewIcon').src = section.icon_Image;
                        document.getElementById('viewName').textContent = section.name;
                        document.getElementById('viewDescription').textContent = section.description || 'N/A';
                        document.getElementById('viewIconUrl').href = section.icon_Image;
                        document.getElementById('viewIconUrl').textContent = section.icon_Image;
                        document.getElementById('viewDate').textContent = new Date(section.createdAt).toLocaleDateString();
                        document.getElementById('viewUpdatedDate').textContent = new Date(section.updatedAt).toLocaleDateString();

                        document.getElementById('viewStatusBadge').innerHTML = `
                            <span class="${section.status === 'active' ? 'badge-active' : 'badge-inactive'} px-3 py-1 rounded-full text-white text-xs font-semibold">
                                <i class="fas fa-${section.status === 'active' ? 'check' : 'times'} mr-1"></i>${section.status.toUpperCase()}
                            </span>
                        `;

                        viewModal.classList.add('show');
                    } catch (error) {
                        console.error('Error viewing section:', error);
                        alert('Failed to view section details');
                    }
                };

                // ==== Edit Section ====
                window.editSection = async (sectionId) => {
                    try {
                        const res = await fetch(`/api/featured/${sectionId}`);
                        const data = await res.json();

                        if (!data.success) {
                            alert('Failed to fetch section details');
                            return;
                        }

                        const section = data.data;
                        modalTitle.textContent = 'Edit Section';
                        document.getElementById('sectionId').value = section._id;
                        document.getElementById('sectionName').value = section.name;
                        document.getElementById('sectionIcon').value = section.icon_Image;
                        document.getElementById('sectionDescription').value = section.description || '';
                        document.getElementById('sectionStatus').value = section.status;

                        sectionModal.classList.add('show');
                    } catch (error) {
                        console.error('Error editing section:', error);
                        alert('Failed to load section details for editing');
                    }
                };

                // ==== Delete Section ====
                window.deleteSection = async (sectionId) => {
                    if (!confirm('Are you sure you want to delete this section?')) return;

                    const token = getTokenFromCookie();
                    if (!token) {
                        alert('Authentication required');
                        return;
                    }

                    try {
                        const res = await fetch(`/api/featured/${sectionId}`, {
                            method: 'DELETE',
                            headers: {
                                'Authorization': `Bearer ${token}`,
                                'Content-Type': 'application/json'
                            }
                        });

                        const data = await res.json();

                        if (res.ok) {
                            alert('Section deleted successfully!');
                            fetchSections(currentPage);
                        } else {
                            alert(data.message || 'Failed to delete section');
                        }
                    } catch (error) {
                        console.error('Delete failed:', error);
                        alert('Something went wrong while deleting');
                    }
                };

                // ==== Pagination Handlers ====
                prevPageBtn.addEventListener('click', () => {
                    if (currentPage > 1) fetchSections(currentPage - 1);
                });

                nextPageBtn.addEventListener('click', () => {
                    if (currentPage < totalPages) fetchSections(currentPage + 1);
                });

                // ==== Search and Filter Handlers ====
                [searchInput, statusFilter, sortByFilter, orderFilter].forEach(el => {
                    el.addEventListener('input', () => fetchSections(1));
                    el.addEventListener('change', () => fetchSections(1));
                });

                // ==== Add Section Button ====
                addSectionBtn.addEventListener('click', () => {
                    sectionModal.classList.add('show');
                    modalTitle.textContent = 'Add New Section';
                    sectionForm.reset();
                    document.getElementById('sectionId').value = '';
                });

                // ==== Close Modal Handlers ====
                [closeModal, cancelBtn].forEach(btn => {
                    btn.addEventListener('click', () => sectionModal.classList.remove('show'));
                });

                [closeViewModal, closeViewBtn].forEach(btn => {
                    btn.addEventListener('click', () => viewModal.classList.remove('show'));
                });

                sectionModal.addEventListener('click', (e) => {
                    if (e.target === sectionModal) {
                        sectionModal.classList.remove('show');
                    }
                });

                viewModal.addEventListener('click', (e) => {
                    if (e.target === viewModal) {
                        viewModal.classList.remove('show');
                    }
                });

                // ==== Submit Form (Add/Edit) ====
                sectionForm.addEventListener('submit', async (e) => {
                    e.preventDefault();

                    const token = getTokenFromCookie();
                    if (!token) {
                        alert('Authentication required');
                        return;
                    }

                    const sectionId = document.getElementById('sectionId').value;
                    const name = document.getElementById('sectionName').value.trim();
                    const icon_Image = document.getElementById('sectionIcon').value.trim();
                    const description = document.getElementById('sectionDescription').value.trim();
                    const status = document.getElementById('sectionStatus').value;

                    if (!name || !icon_Image) {
                        alert('Name and Icon URL are required');
                        return;
                    }

                    const payload = { name, icon_Image, description, status };

                    try {
                        const method = sectionId ? 'PUT' : 'POST';
                        const endpoint = sectionId ? `/api/featured/${sectionId}` : '/api/featured/create';

                        const res = await fetch(endpoint, {
                            method: method,
                            headers: {
                                'Content-Type': 'application/json',
                                'Authorization': `Bearer ${token}`
                            },
                            body: JSON.stringify(payload)
                        });

                        const data = await res.json();

                        if (res.ok) {
                            alert(`Section ${sectionId ? 'updated' : 'created'} successfully!`);
                            sectionModal.classList.remove('show');
                            fetchSections(currentPage);
                        } else {
                            alert(data.message || `Failed to ${sectionId ? 'update' : 'create'} section`);
                        }
                    } catch (error) {
                        console.error('Error submitting form:', error);
                        alert('Something went wrong. Please try again.');
                    }
                });

                // ==== Initial Load ====
                fetchSections();
                fetchStats();
            });
        </script>
